# nord theme
set completion-fg "#d8dee9"
set completion-bg "#2e3440"
set completion-highlight-fg "#eceff4"
set completion-highlight-bg "#4c566a"
set default-fg "#d8dee9"
set default-bg "#2e3440"
set inputbar-fg "#d8dee9"
set inputbar-bg "#2e3440"
set notification-fg "#eceff4"
set notification-bg "#434c5e"
set notification-error-fg "#eceff4"
set notification-error-bg "#bf616a"
set notification-warning-fg "#eceff4"
set notification-warning-bg "#ebcb8b"
set statusbar-fg "#d8dee9"
set statusbar-bg "#3b4252"
set highlight-color "#4c566a"
set highlight-fg "#000000"
set highlight-active-color "#4c566a"
set highlight-transparency 0.5
set render-loading-fg "#d8dee9"
set render-loading-bg "#2e3440"
set index-fg "#d8dee9"
set index-bg "#2e3440"
set index-active-fg "#eceff4"
set index-active-bg "#2e3440"

# general behavior
set window-width 1024
set window-height 640
set database plain
set dbus-service false
set dbus-raise-window false
set page-padding 8
set scroll-step 64
set window-title-page true
set zoom-center true
set font "Fira Code Symbols 9"
set selection-clipboard clipboard

# page recoloring
set recolor-lightcolor "#3b4252"
set recolor-darkcolor "#eceff4"
set recolor-keephue "true"

# key mappings
map [normal] f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map [normal] i recolor
map [fullscreen] i recolor
