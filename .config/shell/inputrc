# inputrc only works with bash, most other shells don't support it

# misc options
set meta-flag on
set input-meta on
set output-meta on
set convert-meta off
set bell-style none
set completion-query-items 128
set echo-control-characters on
set enable-meta-key on
set history-preserve-point on
set mark-directories on
set print-completions-horizontally on
set skip-completed-text on
set visible-stats on

set editing-mode vi
set keymap vi

# enable the home/end keys
"\e[1~": beginning-of-line
"\e[4~": end-of-line

# enable the delete/insert keys
"\e[3~": delete-char
"\e[2~": quoted-insert

# switch to the superior editing mode
$if mode=emacs
    set editing-mode vi
    set keymap vi
$endif

# superior editing mode
$if mode=vi
    set show-mode-in-prompt on
    set vi-ins-mode-string \1\e[6 q\2
    set vi-cmd-mode-string \1\e[2 q\2

    set keymap vi-command
    Control-l: clear-screen
    Control-a: beginning-of-line
    Control-e: end-of-line
    Control-f: vi-append-mode
    "gg": beginning-of-history
    "G": end-of-history

    set keymap vi-insert
    Control-w: backward-kill-word
    Control-l: clear-screen
    Control-a: beginning-of-line
    Control-e: end-of-line
    Control-f: vi-movement-mode
$endif

$if Python
    TAB: complete
$endif
